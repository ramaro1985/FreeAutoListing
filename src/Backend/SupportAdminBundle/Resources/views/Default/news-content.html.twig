
<div id="container" class="container-fluid">
 {% if news|length > 0 %}
   {% for new in news %}
    
<div class="list-row">
        <div  class="row" style="margin: 5px; padding-bottom: 0px; border-bottom: solid 1px #CCC;">
            
            
        <div class="col-md-1 col-sm-1 col-xs-12">
                <div  class="row" >
                <div class="col-md-12 col-xs-12">
                    <a  href="{{ path("support_edit_news", {'id': new.id }) }}"><img src="{{ asset('bundles/common/images/whats-new.jpg') }}"  style="padding-bottom: 5px" class="" data-src="{{ asset('bundles/common/images/whats-new.jpg') }}"></a>
                </div>
                <div class="col-md-12 col-xs-12">
                    <div class="blue-title">{{new.user.name}}</div>
                    
                </div>        
                </div>
            </div>
        <div class="col-md-9 col-xs-12">
            <div class="row">
                <div class="col-md-12 col-xs-12"><a style="text-decoration: none" href="{{ path("support_edit_news", {'id': new.id }) }}"><span class="property-title"> {{new.tittle}}</span></a></div>
            </div>
                <div class="row" style="margin-bottom: 10px; margin-top: 10px">
                <div class="col-md-3 col-sm-3 col-xs-12 text-muted">Date Created: {{new.dateCreated| date("F j \\,\\ Y")}}</div>
                <div class="col-md-3 col-sm-3 col-xs-12 text-muted">
                    Date Posted: {%if new.datePosted != ''  %}{{new.datePosted| date("F j \\,\\ Y")}}{%else%} Not Posted{%endif%}
                </div>
                <div class="col-md-3 col-sm-3 col-xs-12 text-muted">Status: {{new.status.name}}</div>
                
            </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12"><p>{{new.text|slice(0, 180)| raw }}...</p></div>
            </div>
                
                
        </div>
            <div class="col-md-1 col-sm-1 col-xs-12" style="padding:60px 0 0 0 ">
                       <div class="btn-group pull-right">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span style="margin-right: 10px">Actions </span><span class="path glyphicon glyphicon-chevron-down"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            {% if (new.status.name == 'posted')%}
              <li><a href="{{path('support_deactivate_news',{'id': new.id, 'page': page })}}">Disable</a></li>  
             {%elseif (new.status.name == 'pending')%}   
              <li><a href="{{path('support_activate_news',{'id': new.id, 'page': page })}}">Public</a></li>   
             {%endif %}    
        <li class="divider"></li>
        <li><a href="{{ path("support_edit_news", {'id': new.id }) }}">Edit</a></li>
        
        </ul>
        </div> 
                    </div>
            
         </div>
    </div>
    
    {% endfor %}
    
        <div class="row" style="margin-bottom: 10px">
                <div class="col-md-12 col-xs-12">
                    <div class="row">
                      <div class="col-md-12 col-xs-12">
                        <div class="pull-right">
                               {% set count = news.getTotalItemCount %}
                                    <div class="text-right pull-right" style="margin: 8px 15px 0px 0px"><span style="padding: 7px;font-size: 14px;" class="label label-primary">{{ count }} 
                    {% transchoice  count %}
                    {0} There are no News|{1} News Found|]1,Inf] News Found
                    {% endtranschoice %}
                    </span>
                    </div>
                                      </div>
                          
                          <div class="pagination pull-right">
   {{ knp_pagination_render(news) }}
                    </div>
                              
                               </div>
                            
                            
                           
                    </div>
                    
                             
                </div>
            </div>
        
         
       </div>


 {% else %} 

           
        <div class="row" style="margin: 20px 10px 0 ">
                    <div class="col-xs-12 col-md-12">
                       <div class="alert alert-info">There are no News</div>
                    </div>
                </div>
        
 {% endif %}

 <script type="text/javascript">
     
 jQuery(document).ready(function () {
        jQuery('.delete-news').click(function (e) {
          
          if(!confirm('You are about to delete this. Are you sure?')){
           e.preventDefault();
          }
          
        });
    });
    
 </script>