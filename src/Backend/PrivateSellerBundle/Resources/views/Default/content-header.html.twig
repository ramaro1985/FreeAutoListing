<div class="container-fluid">
    <header>
        <div class="row hidden-xs hidden-sm">

            <ul class="breadcrumb breadcrumb-cap">
                {% for breadcrumb in breadcrumbs %}

                    <li class="{{ breadcrumb['class'] }}">
                        {% if( breadcrumb['path'] != '') %}
                            <a href="{{ path(breadcrumb['path']) }}">{{ breadcrumb['name'] }}</a>
                        {% else %}
                            {{ breadcrumb['name'] }}
                        {% endif %}
                        {% if( breadcrumb['class'] == '') %}
                            <img src="{{ asset('bundles/common/images/line1.jpg') }}">
                        {% endif %}
                    </li>

                {% endfor %}
                {% if count_vehicles > 0 %}
                    <li class="col-md-4 pull-right clearfix" style="padding-top: 4px">
                        <div class="input-group ">
                            <input type="text" id="select_car_input" class="form-control"
                                   placeholder="Select Car"/>
                      <span class="input-group-btn">
                         <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"
                                 style="background-color: #E6E6E6;border: 1px solid #ccc;"><span
                                     class="caret"></span></button>
                          <ul class="dropdown-menu pull-right" role="menu">
                              {% if vehicles is defined %}
                                  {% for vehicle in vehicles %}
                                      <li><a href="#" class="selected_car"
                                             id_profile=" {{ vehicle.id }}">{{ vehicle.vehiclesinformation.make }}</a>
                                      </li>
                                  {% endfor %}
                              {% endif %}
                          </ul>
                      </span>
                        </div>
                    </li>
                {% endif %}
            </ul>


        </div>

    </header>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery(".selected_car").click(function () {
            jQuery("#select_car_input").attr("placeholder", jQuery(this).text());
        });

    });

</script>


          