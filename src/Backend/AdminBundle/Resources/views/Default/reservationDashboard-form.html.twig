<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">New Reservation for {{property.description.tagLine}}</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal reservation-form" action="">
                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-12 col-md-12 col-xs-12">
                            {{ form_widget(form.firstName, { 'attr': {'placeholder': ' First Name *'} }) }}
                        </div>

                    </div>

                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-12 col-md-12 col-xs-12">
                            {{ form_widget(form.lastName, { 'attr': {'placeholder': 'Last Name *'} }) }}
                        </div>

                    </div>

                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-12 col-md-12 col-xs-12">
                            {{ form_widget(form.email, { 'attr': {'placeholder': 'Email *'} }) }}
                        </div>
                    </div> 

                    <div class="pcalendar form-group" style="margin-bottom: 10px">


                        <div class="input-group col-md-6 col-sm-6 col-xs-12 pull-left" style="margin-bottom: 5px">
                            {{ form_widget(form.checkIn, { 'attr': {'readOnly': true,'placeholder': 'Arrival'} }) }}
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar" aria-hidden="true" style="color: #B5B5B5"></span></span>

                        </div>
                        <div class=" col-md-6 col-sm-6 col-xs-12" >
                            {{ form_widget(form.checkinhour) }}
                        </div>
                    </div>

                    <div class="pcalendar form-group" style="margin-bottom: 10px">

                        <div class="input-group col-md-6 col-sm-6 col-xs-12 pull-left" style="margin-bottom: 5px">
                            {{ form_widget(form.checkOut, { 'attr': {'class':'form-control dateout', 'readOnly': true,'placeholder': 'Departure'} }) }}
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar" aria-hidden="true" style="color: #B5B5B5"></span></span>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.checkouthour) }}
                        </div>
                    </div>



                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-md-6 col-sm-6 col-xs-12" style="margin-bottom: 5px">
                            {{ form_widget(form.adults) }}
                        </div>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.children) }}
                        </div>
                    </div> 



                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            {{ form_widget(form.phone, { 'attr': {'placeholder': 'Phone'} }) }}
                        </div>
                    </div>

                    

                </form>

                <div class="row">
                    <div class="col-md-7 col-sm-7 col-xs-12"><div id="error"></div></div>
                    <div class="col-md-5 col-sm-5 col-xs-12 text-right">
                        <img id="loadingR" src="{{ asset('bundles/common/images/loading.gif') }}" style="margin-left: 5px; border: 0 none;" class="hide loading" >
                        <button type="button" class="btn btn-default close-btn" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary book">Book Now</button>   
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



<script type="text/javascript">
    
    
    jQuery(document).ready(function () {
        jQuery("#reservationFront_checkIn").datepicker({minDate: new Date(), beforeShowDay: showBooked

        });
        jQuery("#reservationFront_checkOut").datepicker({minDate: new Date(), beforeShowDay: showBooked});
    });

</script>
