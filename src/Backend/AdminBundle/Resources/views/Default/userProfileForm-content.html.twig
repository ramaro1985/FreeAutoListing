
<div id="container" class="container-fluid properties-container">

        
    
    <div class="row">
        <div class="col-md-12  text-center">
            <form id="form-account" action="{{ path('edit_user_profile',{'uid': user }) }}" method="POST" class="form-horizontal">
    <input type="hidden">
   
    
     <div class="col-md-12 col-xs-12">
      
       <div class="form-group" style="margin-bottom: 10px">
       <div class="col-md-12 col-xs-12 text-left form-title">
           
           <div id="title">Edit Account Information</div>
           
       </div>
       </div>
           
    </div>
    
    
    
    
            
    <div class="col-md-12 text-center">   
          
        
        <div class="form-group" style="margin-bottom: 10px">
 
         <div class="col-sm-6 col-xs-12 text-danger">
       {% for flashMessage in app.session.flashbag.get('notice') %}
           
           {{ flashMessage }}
        
           {% endfor %}
           
      
    </div>
     
  </div>

          
        
       
            <div class="form-group" style="margin-bottom: 10px">
 <div class="col-sm-3 col-xs-12 text-right">
    <label for="userProfile_name" class="required">First Name</label>
    </div>
         <div class="col-sm-6 col-xs-12">
    <input type="text" id="userProfile_name" name="userProfile[name]" required="required" maxlength="255" class="form-control" value="{{name}}">
    </div>
     <div class="col-sm-2 col-xs-12 text-danger">
    
    </div>
  </div>
        
        <div class="form-group" style="margin-bottom: 10px">
 <div class="col-sm-3 col-xs-12 text-right">
    <label for="userProfile_lastName" class="required">Last Name</label>
    </div>
         <div class="col-sm-6 col-xs-12">
    <input type="text" id="userProfile_lastName" name="userProfile[lastName]" required="required" class="form-control" value="{{lastName}}">
    </div>
       <div class="col-sm-2 col-xs-12 text-danger">
     
    </div>
  </div>
    
    <div class="form-group" style="margin-bottom: 10px">
          <div class="col-sm-3 col-xs-12 text-right">
    <label for="userProfile_email" class="required">Email</label>
    </div>
            <div class="col-sm-6 col-xs-12">
   <input type="email" id="userProfile_email" name="userProfile[email]" required="required" maxlength="254"  class="form-control" value="{{email}}">
    </div>
    
    <div class="col-sm-2 col-xs-12">
   
    </div>
         </div>
            
        
            
            <div class="form-group" style="margin-bottom: 10px">
          <div class="col-sm-3 col-xs-12 text-right">
    <label for="userProfile_phone" class="required">Phone</label>
    </div>
                <div class="col-sm-6 col-xs-12">
     <input type="text" id="userProfile_phone" name="userProfile[phone]"  maxlength="10" pattern="[0-9]{10}.*" class="form-control" value="{{phone}}">
    </div>
    
    <div class="col-sm-2 col-xs-12 text-danger">
     
    </div>
         </div>
    
        
        
            
             <div class="form-group" style="margin-bottom: 10px">
                </div>
                
                
                           
    
         
          </div>   
         
    
    <div id="form-buttons" class="col-md-10 col-md-offset-3 text-center">
   <div class="form-group" style="margin-bottom: 10px">
    <div class="col-sm-12 col-xs-12 text-left">
        <button id="btnsave" type="submit" class="btn btn-primary">Save</button>
    </div>
           
    </div>        
    
  </div>
    <div style="display: none"></div>
</form>
                </div>
            </div>
    
    </div>

