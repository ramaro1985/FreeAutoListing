<header>
    <div class="row">                            
    <div class="col-md-12 col-xs-12">
                                    <ul class="breadcrumb breadcrumb-cap">
                                            
                                            <li class="active">
                                         
                                                <a href="{{ path('admin_user_personal', {'filtro':filtro}) }}">What's New</a>
                                                <img src="{{ asset('bundles/common/images/line1.jpg') }}">
                                            </li>
                                                                                        
                                    </ul>
                                    </div>
            </div>
        <div  id="tools-container" class="container-fluid"> 
        <div class="col-md-12 col-xs-12" >
        
                                                 <div class="toolbar clearfix">    
                                     
                                                <ul class="btn-toolbar">
                                                 
                                                    <li class="btn-group pull-right">
                                                   
                                                  <select id="select-property" class="form-control">
                                                   
                                                   <option value="" selected="selected" disabled="disabled">All Properties</option>
                                                  
                                                   {% for property in properties %}
                                                    <option value="{{ path('editPropertyHome', {'id': property.serie} ) }}" >
                                                        {{ property.description.name }}
                                                   </option>
                                                   {% endfor %}
                                               </select>

                                                    </li>
                                                    
                                                   
                                                </ul>
                                            </div>
                </div>
                </div>
              
                                        </header>
<div id="container" class="container-fluid properties-container">
 {% if news|length > 0 %}
   {% for new in news %}
    
<div class="list-row">
        <div  class="row" style="margin: 15px 17px; padding-bottom: 10px; border-bottom: solid 1px #CCC;">
            
            
        <div class="col-md-2 col-xs-12">
                <div  class="row" >
                <div class="col-md-12 col-xs-12">
                <a href="{{ path("admin_news_detail", {'id': new.id }) }}"><img src="{{ asset('bundles/common/images/whats-new.jpg') }}"  style="padding-bottom: 5px" class="" data-src="{{ asset('bundles/common/images/whats-new.jpg') }}"></a>
                </div>
                <div class="col-md-12 col-xs-12">
                    <div class="blue-title">HomeEscape</div>
                    
                </div>        
                </div>
            </div>
        <div class="col-md-10 col-xs-12">
            <div class="row">
                <div class="col-md-12 col-xs-12"><a href="{{ path("admin_news_detail", {'id': new.id }) }}"><span class="property-title"> {{new.tittle}}</span></a></div>
            </div>
                <div class="row" style="margin-bottom: 15px; margin-top: 15px">
                <div class="col-md-6 col-xs-12 text-muted">Date: {{new.dateCreated| date("F j \\,\\ Y")}}</div>
                
            </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12"><p>{{new.text|slice(0, 180)| raw  }}</p></div>
            </div>
                
                
        </div>
            
            
         </div>
    </div>
    
    {% endfor %}
    
        <div class="row" style="margin-bottom: 10px">
                <div class="col-md-12 col-xs-12">
                    <div class="row">
                      <div class="col-md-12 col-xs-12">
                        <div class="pull-right">
                               {% set count = news.getTotalItemCount %}
                                    <div class="text-right pull-right" style="margin: 8px 15px 0px 0px"><span style="padding: 7px;font-size: 14px;" class="label label-primary">{{ count }} 
                    {% transchoice  count %}
                    {0} There are no News|{1} News Found|]1,Inf] News Found
                    {% endtranschoice %}
                    </span>
                    </div>
                                      </div>
                          
                          <div class="pagination pull-right">
   {{ knp_pagination_render(news) }}
                    </div>
                              
                               </div>
                            
                            
                           
                    </div>
                    
                             
                </div>
            </div>
        
         
       </div>


 {% else %} 

           
        <div class="row" style="margin: 20px 10px 0 ">
                    <div class="col-xs-12 col-md-12">
                       <div class="alert alert-info">There are no News</div>
                    </div>
                </div>
        
 {% endif %}
