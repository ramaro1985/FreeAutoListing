<div class="modal fade" id="myModalDetails{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Reservation Details</h4>
            </div>
            <div class="modal-body">
                <form id="" method="POST" class="form-horizontal">
                    
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12"><h4>Date Created</h4></div>
                        <div class="col-md-12 col-sm-12 col-xs-12">{{res.dateCreated| date("F jS \\,\\ Y")}}</div>
                            </div>
                            
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12"><h4>Status</h4></div>
                        <div class="col-md-12 col-sm-12 col-xs-12">{{res.status.name}}</div>
                            </div>
                            
                        </div>
                        
                         
                </div>
                        <hr>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12"><h4>Guest Information</h4></div>
                               
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <p>{{res.firstName}} {{res.lastName}}</p>
                        </div>
                    
                         <div class="col-md-4 col-sm-4 col-xs-12 text-right">
                             {% if (res.phone != "" and res.phone != null)%}
                        <div><span class="path glyphicon glyphicon-phone" style="margin-right: 3px; color:#555555 "></span>{{res.phone}}</div>
                            {%endif%}
                        </div>
                </div>
                         <div class="row">
                             <div class="col-md-12 col-sm-12 col-xs-12"><h4>Reservation Details</h4></div>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                          <p>
                    {{res.checkIn | date("F jS \\,\\ Y")}} {{res.checkInHour}}:00  - {{res.checkOut| date("F jS \\,\\ Y")}} {{res.checkOutHour}}:00
                    </p>  
                        </div>
                    <div class="col-md-5 col-sm-5 col-xs-12">
                          <p>
                    {{ res.adults }}
                     {% transchoice  res.adults %}
                        {0} No Adults|{1} Adult |]1,Inf] Adults
                    {% endtranschoice %}
                     , {{ res.children }} Children
                        
                    </p>  
                        </div>
                    
                </div>
                         <div class="row">
                             <div class="col-md-12 col-sm-12 col-xs-12"><h4>Property</h4></div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                          <p>  
                              {{res.property.description.name}} 
                        </p>
                        </div>
                    </div>
               
                    
               
                   
                 
                    

                        <input type="hidden" id="resId" name="resId" value="{{id}}" >
                    
                </form>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-7 col-sm-7 col-xs-12"><div id="error"></div></div>
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <button type="button" class="btn btn-default close-btn" data-dismiss="modal">Close</button>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

