<div class="modal fade" id="myModalReview" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">New Review</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal review-form" action="">
                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-12 col-md-12 col-xs-12">
                            {{ form_widget(form.guest, { 'attr': {'placeholder': ' Full Name *'} }) }}
                        </div>

                    </div>
                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-12 col-md-12 col-xs-12">
                            {{ form_widget(form.email, { 'attr': {'placeholder': 'Email *'} }) }}
                        </div>

                    </div>    

                    <div class="pcalendar form-group" style="margin-bottom: 10px">


                        <div class="input-group col-md-6 col-sm-6 col-xs-12 pull-left" style="margin-bottom: 5px">
                            {{ form_widget(form.stayDate, { 'attr': {'readOnly': true,'placeholder': 'Stay Date'} }) }}
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar" aria-hidden="true" style="color: #B5B5B5"></span></span>

                        </div>

                    </div>

                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-12 col-md-12 col-xs-12">
                            {{ form_widget(form.title, { 'attr': {'placeholder': 'Title *'} }) }}
                        </div>

                    </div>


                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-12 col-md-12 col-xs-12">
                            {{ form_widget(form.description, { 'attr': {'placeholder': 'Message *'} }) }}
                        </div>
                    </div> 

                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-5 col-xs-12">
                            <div class="pull-left" style="padding-right: 3px">Rate</div>
                            <div class="basic1" data-average="12" data-id="1"></div>
                            <div class="basictemp1" data-average="0"></div>
                        </div>
                        <div class="col-md-7 col-sm-7 col-xs-12"><div id="recaptcha2" class="right">
                          
                        </div></div>
                    </div>
                        
                        

                    <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-6 col-xs-12">
                            {{ form_widget(form.valoration) }}
                        </div>
                    </div>



                    

                </form>

                <div class="row">
                    <div class="col-md-7 col-sm-7 col-xs-12"><div id="review-error"></div></div>
                    <div class="col-md-5 col-sm-5 col-xs-12 text-right">
                        <img id="loadingR" src="{{ asset('bundles/common/images/loading.gif') }}" style="margin-left: 5px; border: 0 none;" class="hide loading" >
                        <button type="button" class="btn btn-default close-btn" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary create-review">Create</button>   
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




<script type="text/javascript">

    jQuery(document).ready(function () {

        jQuery(".period-calendar").datepicker({
           
        });
     
            //jQuery('.basictemp').attr("data-average", rating ).attr("data-id", 1);
            //jQuery('.basic').remove();
            
           jQuery('.basic1').jRating({
                                canRateAgain : true,
                                nbRates : 1000,
                                sendRequest: false,
                                rateMax : 5,
                                decimalLength : 1,
                                showRateInfo: false
                            });
                            
                            
                            jQuery('.basic1').remove();
                            jQuery('.basictemp1').jRating({
                                isDisabled:false,
                                canRateAgain : true,
                                nbRates : 1000,
                                sendRequest: false,
                                rateMax : 5,
                                showRateInfo: true,
                                onClick: function(element,rate) {
                                jQuery('#review_valoration').val(rate);
                                },
                                decimalLength : 1,
                                bigStarsPath: '../../../bundles/common/css/icons/stars.png'
                            });
                            
      

    });


</script>