<div class="container-fluid">
<div class="container">
    
    
    <div class="row">
        <div class="col-xs-12 col-md-12 col-sm-12 text-left" style="padding-bottom: 20px">
            <h1>Contact Us</h1>
        </div>
        
         <div class="col-xs-12 col-md-12 col-sm-12 text-left">
             <p>Have a question about HomeEscape? Check out our Help Center for answers to our most frequently asked questions. Not finding the answers you need? Use this form to contact us directly.
            </p>
        </div>
    
    </div>
        <div class="row">
        <div class="col-xs-12 col-md-6 col-sm-12 text-left" style="padding-bottom: 20px;">
         
         <ul class="nav nav-pills nav-contact">
             <li style="padding-right: 10px">
               <a class="pull-left btn  btn-gradient-blue" href="{{  path("help_center") }}">Help Center</a>   
             </li>
             <li>
               <a class="pull-left btn  btn-gradient-blue" href="{{  path("how_works") }}">How It Works</a>   
             </li>
         </ul>
         
         
        </div>
        
    
    
    </div>
        <div class="row" style=" margin-bottom: 60px">
        <div class="col-xs-12 col-md-12 col-sm-12">
            <form id="formContact" action="{{ path('create_contact') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                    <input type="hidden" name="_csrf_token"   value="{{ csrf_token('contact') }}">




                    <div class="form-group" style="margin-bottom: 10px">

                        <div class="col-sm-12 col-xs-12 text-success text-left" style="font-size: 18px">
                            {% for flashMessage in app.session.flashbag.get('message') %}

                               <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> {{ flashMessage }}

                            {% endfor %}
                        </div>

                    </div>
                        
                        <div class="form-group" style="margin-bottom: 10px">

                        
                        <div class="col-sm-12 col-xs-12 text-left text-danger gallery-error text-left" style="font-size: 18px">
                          {{ form_errors(form.userType) }}
                          {{ form_errors(form.email) }}
                          {{ form_errors(form.name) }}
                          {{ form_errors(form.lastName) }}
                          {{ form_errors(form.phone) }}
                          {{ form_errors(form.property) }}
                          {{ form_errors(form.subject) }}
                          {{ form_errors(form.text) }}
                          {{ form_errors(form.photo) }}
                        </div>

                    </div>

                        <div class="form-group" style="margin-bottom: 20px;  margin-right: 25px;  margin-left: 0px; border-bottom: 1px solid #ccc; border-top: 1px solid #ccc;">
                            <div class="col-sm-1 col-md-1 col-xs-12 text-right hidden-xs" style="padding-top: 6px;  padding-right: 25px">
                            {{ form_label(form.userType) }}
                        </div>
                        <div class="col-sm-4 col-md-4 col-xs-12">
                            {{ form_widget(form.userType) }}
                        </div>

                    </div>
                        <div class="row">
                            <div class="col-xs-12 col-md-5 col-sm-5">
                               
                                <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-3 col-md-3 col-xs-12 text-left">
                            {{ form_label(form.email) }}
                        </div>
                        <div class="col-sm-8 col-md-8 col-xs-12">
                            {{ form_widget(form.email) }}
                        </div>

                    </div>
                        
                    <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-3 col-md-3 col-xs-12 text-left">
                            {{ form_label(form.name)}}
                        </div>
                        <div class="col-sm-8 col-md-8 col-xs-12">
                            {{ form_widget(form.name) }}
                        </div>
                       
                    </div>

                    <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-3 col-md-3 col-xs-12 text-left">
                            {{ form_label(form.lastName) }}
                        </div>
                        <div class="col-sm-8 col-md-8 col-xs-12">
                            {{ form_widget(form.lastName) }}
                        </div>
                    </div>


                    <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-3 col-md-3 col-xs-12 text-left">
                            {{ form_label(form.phone) }}
                        </div>
                        <div class="col-sm-8 col-md-8 col-xs-12">
                            {{ form_widget(form.phone) }}
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-3 col-md-3 col-xs-12 text-left">
                            {{ form_label(form.property) }}
                        </div>
                        <div class="col-sm-8 col-md-8 col-xs-12">
                            {{ form_widget(form.property) }}
                        </div>
                    </div>
                        <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-3 col-md-3 col-xs-12 text-left">
                            {{ form_label(form.subject) }}
                        </div>
                        <div class="col-sm-8 col-md-8 col-xs-12">
                            {{ form_widget(form.subject) }}
                        </div>
                    </div>
                        <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-3 col-md-3 col-xs-12 text-left">
                            {{ form_label(form.text) }}
                        </div>
                        <div class="col-sm-8 col-md-8 col-xs-12">
                            {{ form_widget(form.text) }}
                        </div>
                    </div>
                        <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-3 col-md-3 col-xs-12 text-left">
                            {{ form_label(form.photo) }}
                        </div>
                        <div class="col-sm-8 col-md-8 col-xs-12">
                            {{ form_widget(form.photo) }}
                        </div>
                    </div>
                        
                        <div class="form-group" style="margin-bottom: 10px">
                        <div class="col-sm-8 col-md-offset-3 col-md-8 col-sm-offset-3 col-xs-12">
                            {{ form_widget(form.recaptcha) }}
                        </div>
                        <div class="col-sm-8 col-md-offset-3 col-md-8 col-sm-offset-3 col-xs-12 captcha-error">
                            {{ form_errors(form.recaptcha) }}
                        </div>
                    </div>
                        <div class="form-group">
                        <div class="col-sm-4  col-md-4 col-sm-offset-3 col-xs-12">
                            <button type="submit" class="btn btn-block btn-gradient-blue">Submit</button>   
                        </div>
                    </div>
                            </div>
                        <div class="col-xs-12 col-md-7 col-sm-7  side-image hidden-xs">
                            <img src="{{ asset('bundles/common/images/contact-traveler-img.jpg') }}" /> 
                             
                            </div>
                        </div>
                        
                        
                        
                        
               
                    <div style="display: none">{{ form_rest(form) }}</div>
                </form>
        </div>
        
    </div>

 </div>

</div>   





<script type="text/javascript">
              jQuery(document).ready(function() {
                  
                  jQuery('#contactfront_userType input').change(function(){
              
                      if(jQuery(this).val() === '0'){
                          jQuery('.side-image img').attr('src',"{{ asset('bundles/common/images/contact-traveler-img.jpg')}}");
                      }else if(jQuery(this).val() === '1'){
                        jQuery('.side-image img').attr('src',"{{ asset('bundles/common/images/contact-owner-img.jpg')}}");  
                      }
                          
                  });

             });
             
             
             
            
            </script>


