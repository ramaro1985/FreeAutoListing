{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row" style="margin-top: 40px">
        <div class="col-md-6 col-md-offset-3 text-center">
        <h1>Change your Password</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <form id="form-change-password" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" style="margin-top: 20px">
    <input type="hidden" name="_csrf_token"   value="{{ csrf_token('change_password') }}">
   <div class="form-group" >
 
         <div class="col-sm-12">
     {{ form_errors(form.current_password) }}
     {{ form_errors(form.plainPassword) }}
  
    </div>
  </div> 
        
    <div class="form-group" >

        
         <div class="col-md-10 col-sm-10 col-xs-12 col-md-offset-1 col-sm-offset-1">
     {{ form_widget(form.current_password) }}
     
    </div>
      <div class="col-sm-1 col-md-1 hidden-xs" style="padding-left: 0">
                    <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" data-placement="right" title="Must have at least 6 characters, 1 number, 1 upper case (example: Passw5)"></span>
                    </div>
  </div> 
    
        <div class="form-group" style="margin-bottom: 20px">
 
         <div class="col-md-10 col-sm-10 col-xs-12 col-md-offset-1 col-sm-offset-1">
     {{ form_widget(form.plainPassword) }}
    </div>
  </div>  
    
    
    <div class="form-group">
    <div class="col-md-10 col-sm-10 col-xs-12 col-md-offset-1 col-sm-offset-1 text-right">
         <input type="hidden" value="0" id="invalid" /> 
      <button id="btn-submit" type="submit" class="btn btn-primary">Change Password</button>
    </div>
  </div>
    {{ form_rest(form) }}
</form>
                </div>
            </div>
</div>



 <script type="text/javascript">
                            
                           jQuery(document).ready(function() {
                jQuery(function () {
                jQuery(".glyphicon-info-sign").tooltip();
                });  
                
                
                
                  
                jQuery('#fos_user_change_password_form_plainPassword_second').focusout(function (){
                    if(jQuery(this).val() !== '' && jQuery('#fos_user_change_password_form_plainPassword_first').val()  ){
                    if(jQuery(this).val() !== jQuery('#fos_user_change_password_form_plainPassword_first').val()){
                      createPopover(jQuery(this), 'Passwords does not match');
                      jQuery(this).css('box-shadow','0 0 0 rgba(0, 0, 0, 1) inset, 0 0 8px rgba(255, 0, 0, 1)');
                    jQuery('#invalid').val('1');
                     
                    }else {
                     jQuery(this).css('box-shadow','none') ;  
                      jQuery(this).popover('destroy');
                      jQuery('#invalid').val('0');
                    }
                }
                });
                
               
                  jQuery('#fos_user_change_password_form_plainPassword_second').click(function(){
                      jQuery(this).popover('destroy');
                  });
                  jQuery('#fos_user_change_password_form_plainPassword_first').click(function(){
                      jQuery('#fos_user_change_password_form_plainPassword_second').popover('destroy');
                  });
                  
                  jQuery('#btn-submit').click(function (e){
                      if(jQuery('#invalid').val() === '1' ){
                         jQuery('#fos_user_change_password_form_plainPassword_second').focus(); 
                         e.preventDefault(); 
                      }
        
                  });
                  
                  
                           function createPopover(elem, text){
                elem.attr('data-toggle', 'popover');
                    elem.attr('data-placement', 'right');
                    elem.attr('data-content', text);
                    elem.attr('data-container', 'body');
                    elem.popover();
                    elem.trigger('click');
                   
            }
                
                
                });            
                            
                        </script>