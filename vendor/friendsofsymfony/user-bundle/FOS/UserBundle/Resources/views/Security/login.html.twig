    {% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}
   
    <div class="container">
        <div class="row" style="margin-top: 40px">
        <div class="col-md-6 col-md-offset-3 text-center">
        <h1>Owner Login</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <form id="form-login" action="{{ path('fos_user_security_check') }}"  method="POST" class="form-horizontal" style="margin-top: 20px">
    <input type="hidden" name="_csrf_token"   value="{{ csrf_token('authenticate') }}">
   
            
    <div class="form-group" style="margin-bottom: 20px">
 
         <div class="col-sm-12">
             <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Email"/>
     
    </div>
  </div> 
    
        <div class="form-group" style="margin-bottom: 8px">
 
         <div class="col-sm-12">
             <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Password"/>
    </div>
  </div>  
    
    <div class="form-group" style="margin-bottom: 5px">
 
         <div class="col-sm-12 text-left">
             <a href="#"> Forgot password? </a>
    </div>
  </div>  
    
     
    
    
    <div class="form-group" style="margin-bottom: 5px">
 
         <div class="col-sm-6 text-left">
             <label style="margin-top: 10px">
                 <input type="checkbox" id="remember_me" name="_remember_me" ><span style="display: inline; font-weight: 400"> Keep me signed in </span>
    </label>
    </div>
        
        <div class="col-sm-6 text-right">
      <button type="submit" class="btn btn-primary">Sign In</button>
    </div>
  </div> 
    
    <div style="border-bottom: 1px dashed #B6C9D7;margin-top: 2em;"> </div>
    
    <div class="form-group" style="margin-top: 1em;">
        <div class="col-sm-12 text-center">
      
            Want to list your property? <a href="#">Learn More</a>
   </div>
  </div>
    
 
</form>
                </div>
            </div>
</div>
    
    
    
    
    
    
    
    
{% endblock fos_user_content %}
