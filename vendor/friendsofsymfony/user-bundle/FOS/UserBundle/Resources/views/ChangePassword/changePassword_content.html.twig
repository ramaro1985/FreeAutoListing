{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row" style="margin-top: 40px">
        <div class="col-md-6 col-md-offset-3 text-center">
        <h1>Change your Password</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <form id="form-change-password" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" style="margin-top: 20px">
    <input type="hidden" name="_csrf_token"   value="{{ csrf_token('change_password') }}">
   <div class="form-group" >
 
         <div class="col-sm-12">
     {{ form_errors(form.current_password) }}
     {{ form_errors(form.plainPassword) }}
  
    </div>
  </div> 
        
    <div class="form-group" >
 
         <div class="col-sm-12">
     {{ form_widget(form.current_password) }}
     
    </div>
  </div> 
    
        <div class="form-group" style="margin-bottom: 20px">
 
         <div class="col-sm-12">
     {{ form_widget(form.plainPassword) }}
    </div>
  </div>  
    
    
    <div class="form-group">
    <div class="col-sm-12 text-right">
      <button type="submit" class="btn btn-primary">Change Password</button>
    </div>
  </div>
    {{ form_rest(form) }}
</form>
                </div>
            </div>
</div>
